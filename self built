mkdir clamav-webui
cd clamav-webui
nano docker-compose.yml
version: '3.8'

services:
  clamav:
    image: clamav/clamav:latest
    container_name: clamav
    restart: unless-stopped
    ports:
      - "3310:3310"
    volumes:
      - clamav-db:/var/lib/clamav

  webui:
    image: rguziy/clamav-web-client:latest
    container_name: clamav-webui
    depends_on:
      - clamav
    ports:
      - "8080:8080"
    environment:
      - CLAMAV_HOST=clamav
      - CLAMAV_PORT=3310

volumes:
  clamav-db:
